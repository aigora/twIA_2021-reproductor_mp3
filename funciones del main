void menu()
{
	int opcion;
	do
	{
		
		printf("\tBienvenido al menu\n\n");
		printf("1-. AÃ±adir nueva cancion a tu playlist\n2.- Buscar artista\n3.- Buscar cancion\n4.- Mostrar todas las canciones\n0.- Salir\n\n");
		scanf("%d", &opcion);
		switch (opcion)
		{
		case 1:
		{
		    AnadirCancion();
		    system("cls");
		    break;
		}
		case 2:
		{
		    LeerCancion();
		    printf("\n");
		    system("pause");
		    
		    system("cls");
			break;
		}
		case 3:
		{
			break;
		}
		case 4:
		{
		    break;
		}
		case 0:
		{
		    printf("No ha introducido nada valido\n");
			break;
		}
		}
	}while(opcion!=0);
}
	
		

	

void AnadirCancion(void)
{
	FILE* pf;
	char canciones[20]; //*p=cancion;
	int i;
	printf("Introduzca nombre de la cancion: ");
	scanf("%s", cancion);

	

	pf = fopen("cancion.txt", "ab");
	if (pf==NULL)
	{
		printf("Error\n");
		return;
	}
	else
	{
		fwrite(canciones,sizeof(canciones),2,pf);
	    
	}
	//fputc('\n',pf);
	    
	fclose(pf);
	
 }
void LeerCancion(void)
{
	FILE* pf;
	char caracter;
	pf = fopen("cancion.txt", "rb");
	if (pf==NULL)
	{
		printf("Error\n");
		return;
	}
	else
	{
		while((caracter=fgetc(pf))!=EOF)
		{
			printf("%c", caracter);
		}
		

	}
	fclose(pf);
}


