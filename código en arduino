// Referencas a Bibliotecas
#include "Arduino.h"
#include "SoftwareSerial.h"
#include "DFRobotDFPlayerMini.h"

// Variables globales
const int s1 = 2; // pulsadores
const int s2 = 3;
int state1 = 0; // estados para las entradas digitales
int last1 = 1;
int state2 = 0;
int last2 = 1;
void setup()
{
  // Tareas de configuraci√≥n 
  Serial.begin(9600);
   //volumen
  myDFPlayer.volume(10);  //Set volume value (0~30).
  //tipo de ecualizacion(pop, rock...) en este caso normal
  myDFPlayer.EQ(DFPLAYER_EQ_NORMAL);
  //SD como almacenamiento de los archivos mp3
  myDFPlayer.outputDevice(DFPLAYER_DEVICE_SD);
  pinMode(s1, INPUT_PULLUP);
  pinMode(s2, INPUT_PULLUP);
}

void loop()
{
//acciones de los pulsadores(no definitivo)	
   state1 = digitalRead(s1);
  state2 = digitalRead(s2);
  if (state1 != last1) {
    if (state1 == HIGH) {
      myDFPlayer.play(1);
      delay(1000);
    }
  }
  last1  = state1;
  if (state2 != last2 ) {
    if (state2 == HIGH) {
      myDFPlayer.play(2);
      delay(1000);
    }
  }
  last2  = state2;
}
